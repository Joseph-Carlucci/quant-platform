# Quantitative Research Platform Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# POLYGON.IO API CONFIGURATION (REQUIRED)
# =============================================================================
# Get your free API key from: https://polygon.io/
# Free tier: 5 requests/minute | Unlimited tier: No rate limits
POLYGON_API_KEY=your_polygon_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================
# Override default PostgreSQL password (default: quant_password)
# POSTGRES_PASSWORD=your_secure_database_password

# Override default pgAdmin password (default: admin)  
# PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# =============================================================================
# ADDITIONAL API KEYS (OPTIONAL - FOR FUTURE EXPANSION)
# =============================================================================
# Alpha Vantage API Key (for additional market data)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Quandl API Key (for economic data)
# QUANDL_API_KEY=your_quandl_key

# FRED API Key (for Federal Reserve data)
# FRED_API_KEY=your_fred_key

# Yahoo Finance (no key required, but can set user agent)
# YAHOO_USER_AGENT=your_app_name/1.0

# =============================================================================
# PRODUCTION SETTINGS (OPTIONAL)
# =============================================================================
# Set to 'production' to enable production optimizations
# ENVIRONMENT=development

# Custom database connection (override defaults)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis connection (for Airflow task queue)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AWS INTEGRATION (OPTIONAL)
# =============================================================================
# For EC2 deployment with AWS Parameter Store
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# MONITORING AND LOGGING (OPTIONAL)
# =============================================================================
# Enable detailed logging
# LOG_LEVEL=INFO

# Slack webhook for alerts (future feature)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email notifications (future feature)  
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password 